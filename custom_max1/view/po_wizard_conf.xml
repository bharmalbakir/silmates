<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_confirm" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.confirm</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_confirm' and @id='bid_confirm']" position="attributes">
                    <attribute name="confirm">Are you sure?</attribute>
                </xpath>
                <xpath expr="//button[@name='button_confirm' and @id='draft_confirm']" position="attributes">
                    <attribute name="confirm">Are you sure?</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>